<div class="flex flex-col gap-2">
    <a href="/" class="<%- ((is_home()||is_archive())) ? 'font-bold' : '' %>">All Articles</a>
    <% for (let category of site.categories.data) { %>
        <a href="<%- url_for(`/categories/${category.name}`) %>"
            class="<%- is_category(category.name)?'font-bold':'' %>"><%- category.name %></a>
    <% } %>
    <a href="https://docs.bewater.xyz/zh">Translation</a>
</div>