<article>
    <div class="flex flex-col sm:flex-row items-start gap-2 lg:gap-4">
        <a href="<%- url_for(post.path) %>" class="sm:w-[120px] lg:w-[200px]">
            <div class="overflow-hidden w-full aspect-video sm:aspect-square sm:w-[120px] lg:aspect-video lg:w-[200px]">
                <%- image_tag(post.photos[0] || "/assets/default-banner.jpg") %>
            </div>
        </a>
        <div class="flex flex-col gap-2">
            <div class="text-xl"><a href="<%- url_for(post.path) %>" class="link-underline-hover"><%= post.title %></a></div>
            <div class="text-sm font-serif"><span class="cursor-pointer" onclick="location.href='<%- url_for(post.path)%>'"><%- post.excerpt %></span></div>
            <div class="text-xs"><a href="<%- url_for(post.path) %>" class="link-underline-hover"><span><%- post.date.format("L") %></span></a><%if (post.categories.length) {%><span class="px-1">|</span><span><%- list_categories(post.categories, {show_count: false, class: 'link-underline-hover category', style: 'none', separator: ','}) %></span><% } %><%if (post_author(post)) { %><span class="px-1">|</span><span>By <%- Object.values(post.author).map(author => author.name).join(', ') %></span><% } %></div>
        </div>
    </div>
</article>